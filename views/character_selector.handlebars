<div class="tab-content">
    <!--Panel 1-->
    <div class="tab-pane fade in show active" id="panel5" role="tabpanel">
			{{!-- handlebars all the rogue characters --}}
        {{#each character}}
				{{#if (this.character_class === "Rogue"}}

          <div class="card">
    <div class="card-body">
        <h4 class="card-title">{{this.character_name1}}  {{this.character_name2}}</h4>
        <h6 class="card-subtitle mb-2 text-muted">A Level {{this.level}} Rogue</h6>
        <img src="{{this.character_img}}" alt="">
				<p>HP: {{this.hp}}</p> 
				<p>STR: {{this.str}}</p>
				<p>AGI: {{this.agi}}</p>  
				<p>INT: {{this.int}}</p>
				<p>LOOT: {{this.loot}}</p>
        <button id = "{{this.id}}"> Select This Character!</button>
    </div>
		{{/if}}
		{{/each}}
</div>
    </div>

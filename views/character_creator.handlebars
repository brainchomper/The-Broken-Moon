<div class="mainpage-col">
	{{!-- header --}}
	<h1>Character Creator</h1>

	<a href="/menu">
		<button type="button" class="btn btn-secondary btn-rounded" id="menuBtn">Back to the menu!</button>
	</a>

	{{!-- action form to capture user input --}}
	<form>
		{{!-- character class options for new character --}} Character Class:

		<select class="btn" id="class">

			<option value="Wizard">Wizard</option>
			<option value="Warrior">Warrior</option>
			<option value="Rogue">Rogue</option>
		</select>

		<div>
			<img id="displayChar" src="">

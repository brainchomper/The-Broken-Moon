		<br> {{!-- get a character name --}} Character First Name:

		<input type="text">
		<br> {{!-- get a character last name --}} Character Last Name:
		<input type="text" id="charName2">
		<button id="submitCharacter" type="button">Submit Your Character</button>

		<br>
		<button id="submitCharacter" class="btn">Submit Your Character</button>


	</form>
</div>

{{!-- look up "select on change javascript" --}}


<script>
	if ($("#class").val() === "Wizard") {
		$('#displayChar').attr("src", "/assets/characterimages/wizard.png");
	}
	else if ($("#class").val() === "Warrior") {
		$('#displayChar').attr("src", "/assets/characterimages/warrior.png");
	}
	else {
		$('#displayChar').attr("src", "/assets/characterimages/rogue.png");
	}
</script>